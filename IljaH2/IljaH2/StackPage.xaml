<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IljaH2.StackPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label x:Name="lbl" Text="Nupp"
                VerticalOptions="Start" 
                HorizontalOptions="Center"/>
            <StackLayout Orientation="Horizontal">
                <Button x:Name="btn" Text="Vajuta siia" BackgroundColor="#0A6185" BorderColor="#9E86CA" BorderWidth="7" FontSize="Large" Clicked="btn_Clicked" HorizontalOptions="Start">
                </Button>
                
                <Button x:Name="btn2" Text="Vajuta siia" BackgroundColor="#0A6185" BorderColor="#9E86CA" BorderWidth="7" FontSize="Large" Clicked="btn2_Clicked_1" HorizontalOptions="EndAndExpand">
                </Button>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>